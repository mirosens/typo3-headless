{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://fahn-core.mirosens.com/schema/v1/fahndungen.json",
  "title": "FahndungenListResponseV1",
  "description": "Schema für Listen- und Detaildarstellungen von Fahndungen",
  "type": "object",
  "required": ["items", "pagination"],
  "properties": {
    "items": {
      "type": "array",
      "description": "Liste von Fahndungsfällen",
      "items": {
        "$ref": "#/$defs/case"
      }
    },
    "pagination": {
      "type": "object",
      "required": ["page", "perPage", "total"],
      "description": "Paginierungsinformationen",
      "properties": {
        "page": {
          "type": "integer",
          "minimum": 1,
          "description": "Aktuelle Seitenzahl"
        },
        "perPage": {
          "type": "integer",
          "minimum": 1,
          "description": "Anzahl der Einträge pro Seite"
        },
        "total": {
          "type": "integer",
          "minimum": 0,
          "description": "Gesamtanzahl der verfügbaren Einträge"
        },
        "totalPages": {
          "type": "integer",
          "minimum": 0,
          "description": "Gesamtanzahl der Seiten"
        }
      },
      "additionalProperties": false
    },
    "filters": {
      "type": "object",
      "description": "Verfügbare Filteroptionen",
      "properties": {
        "status": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["open", "archived", "closed", "solved"]
          },
          "description": "Verfügbare Status-Filter"
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Verfügbare Kategorie-Filter (z.B. Personenfahndung, Sachfahndung)"
        },
        "regions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Verfügbare Regions-Filter"
        }
      },
      "additionalProperties": true
    }
  },
  "$defs": {
    "case": {
      "type": "object",
      "required": ["id", "caseId", "title", "status"],
      "description": "Einzelner Fahndungsfall",
      "properties": {
        "id": {
          "type": "string",
          "description": "Eindeutige ID des Falls"
        },
        "caseId": {
          "type": "string",
          "description": "Öffentliche Fallnummer (z.B. LPP-2025-0001)"
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "description": "Titel der Fahndung"
        },
        "status": {
          "type": "string",
          "enum": ["open", "archived", "closed", "solved"],
          "description": "Status der Fahndung"
        },
        "category": {
          "type": "string",
          "description": "Kategorie der Fahndung (z.B. Personenfahndung, Sachfahndung)"
        },
        "dateOfCrime": {
          "type": "string",
          "format": "date-time",
          "description": "Datum und Uhrzeit der Tat im ISO 8601 Format"
        },
        "location": {
          "type": "string",
          "description": "Ort der Tat"
        },
        "priority": {
          "type": "string",
          "enum": ["low", "medium", "high", "urgent"],
          "description": "Priorität der Fahndung"
        },
        "teaser": {
          "type": "string",
          "description": "Kurzbeschreibung/Teaser-Text"
        },
        "images": {
          "type": "array",
          "description": "Bilder zum Fahndungsfall",
          "items": {
            "$ref": "#/$defs/image"
          }
        },
        "accessibility": {
          "type": "object",
          "description": "Accessibility-Metadaten",
          "properties": {
            "hasImages": {
              "type": "boolean",
              "description": "Gibt an, ob Bilder vorhanden sind"
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "image": {
      "type": "object",
      "required": ["src", "meta", "accessibility"],
      "description": "Bild-DTO mit Metadaten und Accessibility-Informationen",
      "properties": {
        "src": {
          "type": "string",
          "format": "uri",
          "description": "URL des Bildes"
        },
        "meta": {
          "type": "object",
          "required": ["width", "height"],
          "description": "Technische Metadaten des Bildes",
          "properties": {
            "width": {
              "type": "integer",
              "minimum": 1,
              "description": "Breite des Bildes in Pixeln"
            },
            "height": {
              "type": "integer",
              "minimum": 1,
              "description": "Höhe des Bildes in Pixeln"
            },
            "mimeType": {
              "type": "string",
              "pattern": "^image/(jpeg|jpg|png|gif|webp|svg\\+xml)$",
              "description": "MIME-Type des Bildes"
            },
            "fileSize": {
              "type": "integer",
              "minimum": 0,
              "description": "Dateigröße in Bytes"
            }
          },
          "additionalProperties": false
        },
        "accessibility": {
          "type": "object",
          "required": ["alt", "isDecorative"],
          "description": "Accessibility-Informationen",
          "properties": {
            "alt": {
              "type": "string",
              "description": "Alternativtext für Screenreader (leer wenn dekorativ)"
            },
            "title": {
              "type": "string",
              "description": "Titel-Attribut des Bildes"
            },
            "isDecorative": {
              "type": "boolean",
              "description": "Gibt an, ob das Bild dekorativ ist (dann sollte alt leer sein)"
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
