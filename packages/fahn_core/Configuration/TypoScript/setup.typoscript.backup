# Direct PAGE configuration to avoid inheritance conflicts
page_api = PAGE
page_api {
    typeNum = 9999
    config {
        disableAllHeaderCode = 1
        additionalHeaders.10 {
            header = Content-Type: application/json; charset=utf-8
            replace = 1
        }
        debug = 0
        admPanel = 0
        cache_period = 3600
        sendCacheHeaders = 1
    }
    10 = JSON
    10 {
        fields {
            # Test field to verify it's working
            test = TEXT
            test.value = API Route Working via type=834
            
            # Page info
            page = JSON
            page {
                fields {
                    id = TEXT
                    id.data = TSFE:id
                    
                    title = TEXT
                    title.field = title
                }
            }
            
            # Content elements
            content = CONTENT_JSON
            content {
                table = tt_content
                select {
                    orderBy = sorting
                    where = {#colPos}=0
                    languageField = sys_language_uid
                }
            }
        }
    }
}

